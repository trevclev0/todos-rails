<%= form_with model: todo, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description, required: true %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
